{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS",
        "runtimeArgs": [
          "${workspaceFolder}/node_modules/.bin/nest",
          "start",
          "--debug",
          "--watch"
        ],
        "restart": true,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  